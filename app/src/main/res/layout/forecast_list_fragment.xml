<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>
                <import type="com.example.android.sunshine.core.data.Resource"/>
                <import type="androidx.lifecycle.LiveData"/>
                <import type="com.example.android.sunshine.framework.db.entities.ForecastEntity"/>
                <variable
                    name="forecast"
                    type="LiveData&lt;Resource&lt;ForecastEntity>>" />
        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_city_info"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/forecast_city_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            style="@style/TextAppearance.MaterialComponents.Headline3"
                            android:text="@{forecast.data.cityName}"/>
                        <TextView
                            android:id="@+id/forecast_actual_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            style="@style/TextAppearance.MaterialComponents.Headline4"
                            android:text="@{forecast.data.actualWeatherDescription}"/>
                        <TextView
                            android:id="@+id/forecast_actual_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            style="@style/TextAppearance.MaterialComponents.Headline2"
                            android:text="@{forecast.data.actualTemperature}"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@id/layout_city_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview_forecast_days"
                    tools:listitem="@layout/forecast_list_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/error_message"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/pb_forecast"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
